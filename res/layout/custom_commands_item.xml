<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CommandTag"
        android:id="@+id/command_tag"
        android:paddingLeft="@dimen/base_listItem_LR"
        android:paddingRight="@dimen/base_listItem_LR"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/runCommand" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Exec mode:"
        android:id="@+id/textView8"
        android:paddingLeft="@dimen/base_listItem_LR"
        android:paddingRight="@dimen/base_listItem_LR"
        android:textColor="@color/accent_material_dark"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Send to:"
        android:id="@+id/textView4"
        android:paddingLeft="@dimen/base_listItem_LR"
        android:textColor="@color/accent_material_dark"
        android:paddingRight="@dimen/base_listItem_LR"
        android:layout_below="@+id/command_tag"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run"
        android:id="@+id/runCommand"
        android:layout_marginRight="@dimen/base_listItem_LR"
        android:layout_marginTop="@dimen/base_listItem_LR"
        android:textColor="#ff95ff84"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="system"
        android:id="@+id/sendtocmd"
        android:textColor="@color/accent_material_light"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="mode"
        android:id="@+id/execmode"
        android:textColor="@color/accent_material_light"
        android:layout_below="@+id/sendtocmd"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Run at boot:"
        android:id="@+id/textView9"
        android:paddingLeft="@dimen/base_listItem_LR"
        android:textColor="@color/accent_material_dark"
        android:paddingRight="@dimen/base_listItem_LR"
        android:layout_below="@+id/sendtocmd"
        android:layout_toStartOf="@+id/custom_comands_runAtBoot_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="YES/NO"
        android:id="@+id/custom_comands_runAtBoot_text"
        android:textColor="@color/accent_material_light"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/runCommand" />


</RelativeLayout>
